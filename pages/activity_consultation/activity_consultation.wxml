<view class="activity_consultation">
	<view class="ac_main" wx:for="{{datalist}}">
		<view class="ac_main_top">
			<view class="ac_main_top_img">
				<image src="https://cishan.xabcx.cn{{item.imgList[0]}}"></image>
			</view>
			<view class="ac_main_top_view">
				<view>{{item.title}}</view>
				<view>{{item.address}}</view>
			</view>
		</view>
		<view class="ac_main_center">
			<rich-text class="ac_main_center_one" nodes="{{item.content}}"></rich-text>
			<view>{{item.date}}</view>
		</view>
		<view class="ac_main_bottom">
			<image src="../../images/k_1/djjr.png"></image>
		</view>
	</view>

	<view class="ac_main" wx:for="{{dataList}}">
		<view class="ac_main_top">
			<view class="ac_main_top_img">
				<image src="https://cishan.xabcx.cn{{item.activity.imgList[0]}}"></image>
			</view>
			<view class="ac_main_top_view">
				<view>{{item.sex}}</view>
				<view>{{item.activity.address}}</view>
				
			</view>
		</view>
		<view class="ac_main_center">
			<rich-text class="ac_main_center_one" nodes="{{item.id}}"></rich-text>
			<view>{{item.updateDate}}</view>
		</view>
		<view class="ac_main_bottom">
			<image src="../../images/k_1/djjr.png"></image>
		</view>
	</view>
